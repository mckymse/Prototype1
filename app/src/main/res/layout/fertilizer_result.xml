<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fertilizer"
    android:background="@color/lavender">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="535dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/display_corp"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/selection"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"

            tools:ignore="InvalidId,Suspicious0dp" />

        <ImageView

            android:layout_gravity="center"
            android:contentDescription="@null"
            android:id="@+id/choose_pic"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"

            android:background="@drawable/selection"
            android:padding="15dp" />


        <TextView

            android:layout_gravity="center"
            android:id="@+id/recommended_dose"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/selection"
            android:fontFamily="sans-serif-black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/recommended_dose_kg_ha" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/nitro"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                tools:ignore="InvalidId">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/blue_violet"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_nitro"
                        tools:ignore="Suspicious0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/nitrogen_content"
                        android:textStyle="bold"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="1dp"
                        android:background="@color/lightgray" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:id="@+id/display_N2"
                        android:textColor="#A9A9A9" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/potash"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                tools:ignore="InvalidId">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/blue"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_phospo"
                        tools:ignore="Suspicious0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/phosphate_content"
                        android:gravity="center"
                        android:textStyle="bold"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="1dp"
                        android:background="@color/lightgray" />

                    <TextView
                        android:layout_width="80dp"
                        android:textStyle="bold"
                        android:id="@+id/display_P2"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"

                        android:textColor="#A9A9A9" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/phosp"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                tools:ignore="DuplicateIds,InvalidId">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_dark_green"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_potassium1"
                        tools:ignore="Suspicious0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/potassium_content"
                        android:textStyle="bold"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="1dp"
                        android:background="@color/lightgray" />

                    <TextView
                        android:layout_width="80dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:id="@+id/display_K2"
                        android:textColor="#A9A9A9" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView

            android:layout_gravity="center"
            android:id="@+id/Recommended_bags"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/selection"
            android:fontFamily="sans-serif-black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/recommended_no_of_bags_50kb_bag"
            tools:ignore="DuplicateIds" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/urea"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                tools:ignore="InvalidId">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/blue_violet"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_urea_final"
                        tools:ignore="Suspicious0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/urea_value"
                        android:gravity="center"

                        android:textStyle="bold"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:layout_margin="1dp"
                        android:background="@color/lightgray" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:id="@+id/textView11"
                        android:textColor="#A9A9A9" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_5"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                tools:ignore="InvalidId">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/blue"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_super_phosphate"
                        tools:ignore="Suspicious0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/superphosphate"
                        android:gravity="center"
                        android:textStyle="bold"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="1dp"
                        android:background="@color/lightgray" />

                    <TextView
                        android:layout_width="80dp"
                        android:textStyle="bold"
                        android:id="@+id/textView12"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"

                        android:textColor="#A9A9A9" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview6"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                tools:ignore="DuplicateIds,InvalidId">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_dark_green"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_phosphate"
                        tools:ignore="Suspicious0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/phosphate_content"
                        android:textStyle="bold"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="1dp"
                        android:background="@color/lightgray" />

                    <TextView
                        android:layout_width="80dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:id="@+id/textView13"
                        android:textColor="#A9A9A9" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <TextView
            android:id="@+id/Amount"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="@string/amount"
            android:background="@drawable/selection"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="DuplicateIds,InvalidId,Suspicious0dp" />

        <TextView
            android:id="@+id/Amt"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/selection"
            android:gravity="center"/>



    </LinearLayout>
</RelativeLayout>